<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/perpal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/path_post"
            android:tint="@color/white">

        </ImageView>

        <TextView
            android:id="@+id/prayerTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font_medium"
            android:text="CREATE YOUR REFLECTIONS"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/post_btn"
            android:fontFamily="@font/font_medium"
            android:gravity="left|top"
            android:padding="10dp"
            android:text="Share your thoughts anonymously and get support from other zocians"
            android:textSize="14sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:background="@drawable/post_btn"
            android:fontFamily="@font/font_medium"
            android:gravity="left|top"

            android:hint="Heading"
            android:padding="10dp"
            android:text=""
            android:textSize="14sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/postView"
            android:layout_below="@+id/heading"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/post_btn"
            android:fontFamily="@font/font_medium"
            android:gravity="left|top"
            android:hint="Type your content here.."
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:text=""
            android:textSize="14sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/postView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/font_regular"

            android:gravity="center"
            android:text="POST"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>