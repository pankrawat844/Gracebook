<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/ShowPlayIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ShowPlayIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowplaylistname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                android:text="Noise Reduction Software"
                android:textColor="@android:color/black"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/rowplaylistduatiron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                android:text="When the call connects you will see a set of 4 emojis. These emojis will also be displayed on the other speaking partyâ€™s call window"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"></TextView>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>